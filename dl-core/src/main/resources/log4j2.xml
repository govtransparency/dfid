<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
        	<PatternLayout pattern="%-5p %d %c - %m%n"/>
    	</Console>
    </Appenders>
    <Loggers>
        <logger name="org.silvertunnel_ng.netlib" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </logger>
        <logger name="com.gargoylesoftware" level="OFF" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </logger>
        <Logger name="eu.dl" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="eu.datlab" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="WARNING">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>